<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>list</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>list-emp</from-outcome>
            <to-view-id>/employees.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit-emp</from-outcome>
            <to-view-id>/employees-edit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit-dep</from-outcome>
            <to-view-id>/departments-edit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>list-dep</from-outcome>
            <to-view-id>/departments.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>employeeController</managed-bean-name>
        <managed-bean-class>pl.polsl.ismoil.atajanov.jsf.EmployeeController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>employeesController</managed-bean-name>
        <managed-bean-class>pl.polsl.ismoil.atajanov.jsf.EmployeesController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>departmentController</managed-bean-name>
        <managed-bean-class>pl.polsl.ismoil.atajanov.jsf.DepartmentController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>departmentsController</managed-bean-name>
        <managed-bean-class>pl.polsl.ismoil.atajanov.jsf.DepartmentsController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
</faces-config>
